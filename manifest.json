{
  "manifest_version": 3,
  "name": "GhostWriter",
  "version": "0.1",
  "action": {
    "default_popup": "./popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["./content/chatgpt/content.js"]
    }
  ],
  "web_accessible_resources" : [
    {
      "matches": ["<all_urls>"],
      "resources": ["/images/ghost_writer_128.png"]
    }
  ]
}
